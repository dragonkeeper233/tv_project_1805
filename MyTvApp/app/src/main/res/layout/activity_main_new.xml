<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color_blue"
    android:orientation="vertical">

    <com.wytv.cc.mytvapp.View.HometitleView
        android:id="@+id/screen_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.wytv.cc.mytvapp.View.HomeDrawView
            android:id="@+id/screen_monitor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

        </com.wytv.cc.mytvapp.View.HomeDrawView>

        <com.wytv.cc.mytvapp.View.HomeServerView
            android:id="@+id/screen_sever"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"></com.wytv.cc.mytvapp.View.HomeServerView>

    </LinearLayout>
</LinearLayout>