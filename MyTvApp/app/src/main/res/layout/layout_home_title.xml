<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="10dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:scaleType="center"
        android:src="@drawable/logo" />

    <ImageView
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:background="@color/white" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_weight="1"
        android:gravity="center_vertical|left"
        android:text="安全运维监控"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/home_title_bg"
            android:gravity="center"
            android:padding="10dp"
            android:text="项目信息"
            android:textColor="@color/white"
            android:textSize="16dp" />

        <com.wytv.cc.mytvapp.View.TitleItemView
            android:id="@+id/title_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/home_title_btn_bg"
            android:padding="10dp" />

        <com.wytv.cc.mytvapp.View.TitleItemView
            android:id="@+id/title_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/home_title_btn_bg"
            android:padding="10dp" />

        <com.wytv.cc.mytvapp.View.TitleItemView
            android:id="@+id/title_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/home_title_btn_bg"
            android:padding="10dp" />

        <com.wytv.cc.mytvapp.View.TitleItemView
            android:id="@+id/title_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/home_title_btn_bg"
            android:padding="10dp" />

        <com.wytv.cc.mytvapp.View.TitleItemView
            android:id="@+id/title_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/home_title_btn_bg"
            android:padding="10dp" />

        <Button
            android:id="@+id/title_refresh_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/title_btn_selector"
            android:gravity="center"
            android:padding="10dp"
            android:text="刷新"
            android:textColor="@drawable/text_color_selector"
            android:textSize="16dp" />

        <Button
            android:id="@+id/title_left_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/title_btn_selector"
            android:gravity="center"
            android:padding="10dp"
            android:text="左"
            android:textColor="@drawable/text_color_selector"
            android:textSize="16dp" />

        <Button
            android:id="@+id/title_right_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:background="@drawable/title_btn_right_selector"
            android:gravity="center"
            android:padding="10dp"
            android:text="右"
            android:textColor="@drawable/text_color_selector"
            android:textSize="16dp" />
    </LinearLayout>
</LinearLayout>